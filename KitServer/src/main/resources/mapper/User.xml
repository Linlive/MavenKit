	<select id="getUserInfo" parameterClass="map" resultClass="User">
		SELECT * FROM tb_user WHERE userName = #userName#
	</select>
	<select id="getAllUser" resultClass="User">
		SELECT * FROM tb_user
	</select>

</sqlMap>